{% extends 'base.html.twig' %}

{% block title %}Service indisponible{% endblock %}

{% block metaDescription %}
<meta name="description" content="La page que vous souhaitez voir n'a pas
    pu aboutir car le serveur est temporairement indisponible.">
{% endblock %}

{% block ogMeta %}
<!-- block og:meta (facebook) : url, title and description -->
<meta property="og:url" content="{{ app.request.uri }}" />
<meta property="og:title" content="Service indisponible | ExtraMémoire" />
<meta property="og:description" content="La page que vous souhaitez voir n'a pas
    pu aboutir car le serveur est temporairement indisponible." />
{% endblock %}

{% block JSON %}
<!-- block SEO JSON -->
<script type='application/ld+json'>
    {
        "@context": "http://www.schema.org",
        "@type": "WebSite",
        "name": "Service indisponible | ExtraMémoire",
        "url": "{{ app.request.uri }}"
    }
</script>
{% endblock %}

{% block stylesheets %}
<link rel="stylesheet" href="{{ asset('css/error.css') }}">
{% endblock %}

{% block body %}
<div class="container">
    <div class="row">
        <div class=" col-10 offset-1 col-md-8 offset-md-2 text-center message-error mt-5">
            <h1 class="position-relative">Oups, service indisponible !</h1>

            <p class="message-text">
                La page que vous souhaitez voir n'a pas pu aboutir car le serveur est temporairement indisponible.<br />
                Rechargez la page et, si le problème persiste, armez-vous simplement de patience,
                nous réglons le problème le plus rapidement possible.<br />
            </p>
        </div>
    </div>
</div>

{% endblock %}